<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Woody's Tuesday Night Trivia</title>
        <link href="https://fonts.googleapis.com/css2?family=Modak&display=swap" rel="stylesheet">
        <link href="/styles/base.css" rel="stylesheet" type="text/css"/>
        <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
    </head>
    <body>
        <main>
            <form class="logout_form" method="get">
                <button class="logout_btn" type="submit">Logout</button>
            </form>
            <section>
                <% if (login_error) { %>
                    <div class="error"> <%= login_error %> </div>
                <% } %> 
                <h1>Team: <%= team %></h1>
                <h1>Scores: </h1>
                <div class="scoreboard">                                      
                </div>
                <br>
            </section>
        </main>
        <script>
            const scoreboard = document.querySelector('.scoreboard');
            const logout_btn = document.querySelector('.logout_btn');
            const logoutForm = document.querySelector('.logout_form');
            let teamNames = '<%= teamNames %>'.split(',');
            let teamTotals = '<%= teamTotals %>'.split(',');
            let markup = '';

            const logout = async(e) => {
                const logout = confirm('Are you sure you\'d like to logout? If you logout, you won\'t be able to login again during this current trivia session.');

                if(logout){
                    logoutForm.action = '/';
                    let logoutUser = await fetch('/logout');                 
                }
                else {
                    e.preventDefault();
                }
            };

            let arr = [];

            let team = {
                name: '',
                score: 0
            }
            
            for(let i=0; i<teamNames.length; i++){
               // markup += `<li style="list-style: none;">${teamNames[i]}: ${teamTotals[i]}</li>`;
                let newTeam = Object.assign({}, team, {name: `${teamNames[i]}`, score: `${teamTotals[i]}`});
                arr.push(newTeam);
            }

            let newArr = arr.sort((a, b) => (Number(a.score) < Number(b.score)) ? 1: -1);

            for(let x of newArr){
                markup += `<li style="list-style: none;">${x.name}: ${x.score}</li>`;
            }

            console.log(newArr);

            scoreboard.insertAdjacentHTML('afterbegin', markup);
            logout_btn.addEventListener('click', logout);
            
        </script>
    </body>
</html>